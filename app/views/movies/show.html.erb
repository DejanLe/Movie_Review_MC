<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4"> 
          <%= image_tag @movie.image.url(:medium) %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                 <td> <strong>Title:</strong></td>
                  <td> <%= @movie.title %> <td>
                </tr>
                <tr> 
                  <strong>Description:</strong>
                  <%= @movie.description %>
                </tr>
                <tr> 
                  <strong>Movie lenth:</strong>
                  <%= @movie.movie_lenth %>
                </tr>
                <tr>
                  <strong>Director:</strong>
                  <%= @movie.director %>
                </tr>
                <tr>
                  
                <strong>Rating:</strong>
                <%= @movie.rating %> 
                 </tr>
              </tbody>
             </table>
               <%= link_to "Write a Review", new_movie_review_path(@movie), class: 'btn btn-default'   %>
          </div>
        </div>


            <div class="col-md-7 col-md-offset-1">
              <h1 class="review_title"><%= @movie.title %></h1>
              <p><%= @movie.description %></p>

              <% if @reviews.blank? %>
                <h3>No reviews just yet, would you like to add the first!</h3>
                <%= link_to "Write Review", new_movie_review_path(@movie), class: 'btn btn-info' %>

                <% else %>

                <% @reviews.each do |review| %>
                <div class="reviews">
                     <div class="star-rating" data-score= <%= review.rating %> > </div>
                     <p><%= review.comment %></p> 
                </div>
              <% end %>
             <% end %>
            </div>
        </div>
   </div>
</div>




 
<% if user_signed_in? %>
<%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-default' %> 
<% end %>|
<%= link_to 'Back', movies_path, class: 'btn btn-default' %>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');
    }
  });
</script>